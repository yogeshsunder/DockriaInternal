@using Domain.Model;
@using Microsoft.AspNetCore.Identity;
@*@model IEnumerable<Domain.Model.AuditLog>*@


@{
    ViewData["Title"] = "Index";

}

@{
    <text>
        <style>

            .custom-card {
                border: 4px solid #2274A5;
            }

            .border {
                border: 4px solid #2274A5;
            }

            #auditLogDisplay {
                overflow: hidden;
                white-space: nowrap;
            }

            .large-font {
                font-size: 2em; /* Adjust the font size as needed */
            }

            .scrolling-text {
                margin: auto;
                color: white;
                font: 700 normal 2.5em 'tahoma';
                text-shadow: 5px 2px #222324, 2px 4px #222324, 3px 5px #222324;
            }

        </style>
    </text>
}


<div class="card-header bg-info-gradient text-white bubble-shadow" style="text-align:center">
    <div id="wordContainer" class="large-font"></div>
    <div id="auditLogDisplay" class="scrolling-text"></div>
    <h4>Home</h4>
</div>

<div class="container" style="background:#FAFAFA;">
    <div class="row" style="margin-top:20px;">
        <div class="col-md-2 col-xl-2">
            <div class="card bg-c-blue order-card">

                <h6 class="m-b-30 m-2" style="text-align:center;font-weight:bold;">
                    TOTAL <br /> CLIENTS
                </h6>
                <h2 class="m-b-30 m-2" style="text-align:center"><span>80</span></h2>
            </div>
        </div>
        <div class="col-md-2 col-xl-2">
            <div class="card bg-c-blue order-card">
                <h6 class="m-b-30 m-2" style="text-align:center;font-weight:bold;">
                    TOTAL <br /> USERS
                </h6>
                <h2 class="m-b-30 m-2" style="text-align:center"><span>2000</span></h2>
            </div>
        </div>
        <div class="col-md-2 col-xl-2">
            <div class="card bg-c-blue order-card">
                <h6 class="m-b-30 m-2" style="text-align:center;font-weight:bold;">
                    TOTAL  SALES<br />   US $
                </h6>

                <h2 class="m-b-30 m-2" style="text-align:center"><span>2000</span></h2>

            </div>
        </div>
        <div class="col-md-2 col-xl-2">
            <div class="card bg-c-blue order-card">
                <h6 class="m-b-30 m-2" style="text-align:center;font-weight:bold;">
                    OLDEST<br /> CLIENT
                </h6>

                <h2 class="m-b-30 m-2" style="text-align:center"><span>Sansini PLC</span></h2>



            </div>
        </div>
        <div class="col-md-2 col-xl-2">
            <div class="card bg-c-blue order-card">
                <h6 class="m-b-30 m-2" style="text-align:center;font-weight:bold;">
                    TOTAL<br /> DOCUMENTS
                </h6>

                <h2 class="m-b-30 m-2" style="text-align:center"><span>500 M</span></h2>
            </div>
        </div>

        <div class=" row-cols-md-1">
            <canvas id="myChart" width="400" height="200"></canvas>
        </div>

        <div class="col-md-2 col-xl-2">
            <div class="card bg-c-blue order-card">
                <h6 class="m-b-29 m-2" style="text-align:center;font-weight:bold;">
                    TOTAL<br /> TREES
                    <br />
                    SAVED
                    <br />
                </h6>

                <h2 class="m-b-30 m-2" style="text-align:center"><span>6,250</span></h2>
            </div>
        </div>
        <div class="col-md-2 col-xl-2">
            <div class="card bg-c-blue order-card">
                <h6 class="m-b-30 m-2" style="text-align:center;font-weight:bold;">
                    TOTAL<br /> TIME ON THE
                    SYSTEM
                </h6>

                <h2 class="m-b-30 m-2" style="text-align:center"><span>5000 hrs</span></h2>
            </div>
        </div>

    </div>
</div>

<br />
<div class="row" style="margin-left:0.5em;margin-right:0.5em;">
    <div class="col-lg-12">
        <div class="card custom-card">
            <div class="card-header">
                <h3 class="card-title">AUDIT LOGS</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblDataTable" class="table table-bordered text-nowrap border-bottom" cellspacing="0" width="100%">
                        <thead>
                            <tr class="text-center">
                                <th class="wd-15p border-bottom-0">DATE</th>
                                <th class="wd-15p border-bottom-0">TIME</th>
                                <th class="wd-15p border-bottom-0">USERNAME</th>
                                <th class="wd-15p border-bottom-0">FULL NAME</th>
                                <th class="wd-15p border-bottom-0">BROWSER NAME</th>
                                <th class="wd-15p border-bottom-0">IP ADDRESS</th>
                                @*<th class="wd-15p border-bottom-0">ACTION</th>*@
                                <th class="wd-15p border-bottom-0">RECORD TYPE</th>
                              @*  <th class="wd-15p border-bottom-0">OLD DATA</th>*@
                                <th class="wd-15p border-bottom-0">NEW DATA</th>
                                @*<th class="wd-15p border-bottom-0">EVENT DESCRIPTION</th>*@
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/AuditLogs.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
}
