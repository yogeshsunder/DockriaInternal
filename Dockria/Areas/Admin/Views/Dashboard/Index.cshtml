<div class="container" style="background:#FAFAFA;  border: 4px solid #2274A5;">
    <div class="row" style="margin-top:20px;">
        <p>
            <h2 style="margin-left:25px;">ALL CLIENTS OF DOCKRIA</h2>
        </p>
        <table class="table">
            <thead>
                <tr>

                    <th scope="row" class="text-center">COMPANY UNIQUE ID</th>
                    <th scope="row" class="text-center">COMPANY NAME</th>
                    <th scope="row" class="text-center">COMPANY ADMIN EMAIL</th>
                    <th scope="row" class="text-center">COMPANY ADMIN NAME</th>
                    <th scope="row" class="text-center">LAST LOGIN DATE TIME</th>
                    <th scope="row" class="text-center">TIME SPENT IN SYSTEM</th>
                    <th scope="row" class="text-center">STATUS</th>
                    <th scope="row" class="text-center">OPTIONS</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Id)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.AdminEmail)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.AdminName)</td>
                       @* <td class="text-center">
                            <input type="submit" value="Edit" class="btn btn-success btn-sm d-inline btn-block edit-user" data-id="@item.Id" />

                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>