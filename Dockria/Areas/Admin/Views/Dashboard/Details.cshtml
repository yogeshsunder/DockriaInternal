@model IEnumerable<Domain.Model.ViewModel.CompanyAdminUser>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //IEnumerable<Domain.Model.ApplicationUser> userlist = Model.ApplicationUserList;
}



<div class="card-header bg-info-gradient text-white bubble-shadow">

    <h5 style="text-align:center;">CREATE/MANAGE A COMPANY</h5>
</div>

<br />

<div id="company-list" style="margin-left:10px;" class="row">
    <div id="admin-list" class="col-md-3">
        @await Html.PartialAsync("_companyAdminListPartialView", Model)
    </div>

    <div class="col-md-9 ">
        @await Html.PartialAsync("_EditForm", new Domain.Model.ViewModel.CompanyAdminUser())
    </div>
</div>

<div class="col-md-10 p-0" style="margin-left:5%;margin-right:5px;margin-top:20px">
    <div class="row">
        <input type="button" id="DeletecompanyForm" onclick="onDeleteClick('#companyAdminForm')" class="btn text-white btn-rounded" value="DELETE COMPANY" style="background-color:red;" />
        <input type="submit" id="ClearcompanyForm" value="CLEAR FORM" onclick="onClearForm('#companyAdminForm')" class="btn text-white btn-rounded" style="background-color:red; margin-left:10px;" />&nbsp;
        <input type="submit" id="UpdatecompanyForm" value="UPDATE COMPANY" onclick="onUpdateClick('#updateAdminForm')" class="btn text-white btn-rounded" style="background-color:red; margin-left:10px;" />&nbsp;
        <input type="submit"  id= "savecompanyForm" onclick="onSaveClick('#companyAdminForm')" value="SAVE COMPANY" class="btn text-white btn-rounded" style="background-color:red; margin-left:10px;" />
        <input type="submit" id="downloadcompanyForm" value="DOWNLOAD INVOICE" onclick="downloadInvoice('#companyAdminForm')" class="btn text-white btn-rounded" style="background-color:red; margin-left:10px;" />
    </div>
</div>

<div class="col-md-10 pr-0" style="padding-bottom: 5px;">
    <div class="row">
        <h4 class="text-muted" style="padding-left: 7%; padding-right: 8%; padding-top: 2%;">
            To Add a Company, please add the required details on your right and click on Save Company.<br />
            To edit or update a company, please click on the EDIT button.<br /> Company details will be loaded on your right to make changes that are required.
        </h4>
    </div>
</div>



