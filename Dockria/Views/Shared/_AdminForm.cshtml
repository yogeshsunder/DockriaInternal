@model Domain.Model.ApplicationUser


<div class="container" id="addAdminModal">
    <table class="table table-bordered table-head-bg-info table-bordered-bd-info" style="border: 4px solid #2274A5;">
        <thead>
            <tr class="table table-bordered table-bordered-bd-warning mt-4">
                <th colspan="2" style="text-align: center;">DOCKRIA ADMINISTRATOR UPDATE FORM</th>
            </tr>
        </thead>
    </table>
    <table class="table" id="table_data" style="border: 4px solid #2274A5;">
        <tr>

            <td style="width: 30%;">
                <form id="addAdminForm">
                    <div class="form-group row">
                        <label asp-for="@Model.Id" class="col-sm-2 col-form-label" style="font-size:100px"> ADMIN UNIQUE ID</label>
                        <div class="col-sm-7" style="text-align:right">
                            <input asp-for="@Model.Id" type="text" class="form-control" id="id" placeholder="Enter your ID" style=" margin-left:50%; font-weight:bold;" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.FullName" class="col-sm-2 col-form-label" style="font-size:100px">FULL NAME</label>
                        <div class="col-sm-7" style="text-align:right">
                            <input asp-for="@Model.FullName" type="text" class="form-control" id="fullName" placeholder="Enter your full name" style=" margin-left:50%;" />
                        </div>
                    </div>
                    <div class="row" style="margin-left:50%">
                        <span asp-validation-for="@Model.FullName" class="text-danger" style="font-weight:bold;"></span>
                    </div>

                    <div class="form-group row">

                        <label asp-for="@Model.EmailAddress" class="col-sm-2 col-form-label">EMAIL ADDRESS</label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.EmailAddress" type="text" class="form-control" id="emailAddress" placeholder="Enter your email address" style=" margin-left:50%; ">
                        </div>

                    </div>
                    <div class="row" style="margin-left:50%">
                        <span asp-validation-for="@Model.EmailAddress" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.ConfirmEmailAddress" class="col-sm-2 col-form-label">CONFIRM EMAIL ADDRESS</label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.ConfirmEmailAddress" type="text" class="form-control" id="confirmEmailAddress" placeholder="Enter your confirm email address" style=" margin-left:50%;">
                        </div>
                    </div>
                    <div class="row" style="margin-left:50%">
                        <span asp-validation-for="@Model.ConfirmEmailAddress" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.PhoneNumber" class="col-sm-2 col-form-label">PHONE NUMBER</label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.PhoneNumber" type="text" class="form-control" id="phoneNumber" placeholder="Enter your phone number" style=" margin-left:50%; font-weight:bold;">
                        </div>
                    </div>
                    <div class="row" style="margin-left:50%">
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                    <!-- add more form fields here -->
                    <div class="form-group text-center">
                        <input type="submit" id="deleteAdminForm" value="Delete Admin" onclick="deleteAdminList('#addAdminForm')" class="btn btn-danger" />
                        <input type="submit" id="saveAdminForm" value="Save New Admin" class="btn btn-primary" />
                        <input type="submit" id="updateAdminForm" value="Update Admin" onclick="updateAdminList('#addAdminForm')" class="btn btn-success " />
                    </div>
                </form>
            </td>
        </tr>
    </table>
</div>
<!-- Add the modal for confirmation -->
<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="confirmationModalBody">
                <!-- Confirmation message will be displayed here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmBtn">Confirm</button>

            </div>
        </div>
    </div>
</div>
