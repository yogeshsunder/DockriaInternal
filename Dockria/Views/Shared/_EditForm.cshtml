@model Domain.Model.ViewModel.CompanyAdminUser;


<div class="col" id="_EditFormTwo" name="_EditFormTwo">
    <div class="card-header bg-info-gradient text-white bubble-shadow" style="border: 4px solid #2274A5; margin-left:15px;">
        <h6 colspan="9" style="text-align:center;">COMPANY UPDATE FORM</h6>
    </div>
    <form id="updateAdminForm" method="post" enctype="multipart/form-data" style="border: 4px solid #2274A5; margin-left:15px;">
        <div class="row">

            <!-- Left part -->
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.Id">COMPANY UNIQUE ID</label>
                    </div>
                    <div class="col-sm-7" style="text-align:right">
                        <input asp-for="@Model.Id" type="text" class="form-control form-control-sm" id="id" readonly />

                        <span asp-validation-for="@Model.Id" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.Name" class="small">COMPANY LEGAL NAME</label>
                    </div>
                    <div class="col-md-7" style="text-align:right">
                        <input asp-for="@Model.Name" type="text" class="form-control form-control-sm" id="name" />

                        <span asp-validation-for="@Model.Name" class="text-danger" style="font-weight:bold; margin-right:20px;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.Address" class="small">COMPANY ADDRESS</label>
                    </div>
                    <div class="col-md-7" style="text-align:right">
                        <input asp-for="@Model.Address" type="text" class="form-control form-control-sm" id="address" />

                        <span asp-validation-for="@Model.Address" class="text-danger" style="font-weight:bold; margin-right:40px;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.OfficialEmail" class="small">COMPANY OFFICIAL EMAIL</label>
                    </div>
                    <div class="col-md-7" style="text-align:right">
                        <input asp-for="@Model.OfficialEmail" type="text" class="form-control form-control-sm" id="officialEmail" />

                        <span asp-validation-for="@Model.OfficialEmail" class="text-danger" style="margin-right:10px; font-weight:bold;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.PhoneNumber" class="small">COMPANY PHONE NUMBER</label>
                    </div>
                    <div class="col-md-7" style="text-align:right">
                        <input asp-for="@Model.PhoneNumber" type="text" class="form-control form-control-sm" id="phoneNumber" />

                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.RegistrationNumber" class="small">COMPANY BUSINESS REG.<br>NUMBER</label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.RegistrationNumber" type="text" class="form-control form-control-sm" id="registrationNumber">
                        <span asp-validation-for="@Model.RegistrationNumber" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.PinNumber" class="small">COMPANY PIN NUMBER</label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.PinNumber" type="text" class="form-control form-control-sm" id="pinNumber">

                        <span asp-validation-for="@Model.PinNumber" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.InvoiceMail" class="small">EMAIL ADDRESS TO RECEIVE<br />INVOICE</label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.InvoiceMail" type="text" class="form-control form-control-sm" id="invoiceMail">

                        <span asp-validation-for="@Model.InvoiceMail" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.ReciveEmail" class="small">EMAIL ADDRESS TO RECEIVE<br />LOGIN DETAILS</label>
                    </div>
                    <div class="col-sm-7">
                        <input asp-for="@Model.ReciveEmail" type="text" class="form-control form-control-sm" id="reciveEmail" />

                        <span asp-validation-for="@Model.ReciveEmail" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                </div>
            </div>

            <!-- Right part -->
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.AdminName" class="small">COMPANY ADMIN NAME</label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="@Model.AdminName" type="text" class="form-control form-control-sm" id="adminName" />

                        <span asp-validation-for="@Model.AdminName" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.AdminEmail" class="small">COMPANY ADMIN EMAIL</label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="@Model.AdminEmail" type="email" class="form-control form-control-sm" id="adminEmail" />
                        <span asp-validation-for="@Model.AdminEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.AdminDesignation" class="small">COMPANY ADMIN DESIGNATION</label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="@Model.AdminDesignation" type="text" class="form-control form-control-sm" id="adminDesignation" />
                        <span asp-validation-for="@Model.AdminDesignation" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.AdminPhoneNumber" class="small">COMPANY ADMIN PHONE NUMBER</label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="@Model.AdminPhoneNumber" type="tel" class="form-control form-control-sm" id="adminPhoneNumber" />
                        <span asp-validation-for="@Model.AdminPhoneNumber" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="SubscriptionList"></label>

                    </div>
                    <div class="col-md-7">
                        <select onclick="showData()" asp-for="SubscriptionList" class="form-control form-control-sm" aria-required="true" id="subscriptionList">
                            <option value="Select Subscription" disabled selected>Select Subscription</option>
                        </select>
                        <span asp-validation-for="@Model.SubscriptionList" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.StorageSpace"></label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="@Model.StorageSpace" class="form-control" id="storageSpace" />
                        <span asp-validation-for="@Model.StorageSpace" class="text-danger" style="font-weight:bold;"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.DateFrom">DATE FROM</label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="@Model.DateFrom" class="form-control" id="dateFrom" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <label asp-for="@Model.DateTo">DATE TO</label>
                    </div>
                    <div class="col-md-7">
                        <input asp-for="@Model.DateTo" class="form-control" id="dateTo" />
                    </div>
                </div>

                <div class="form-group row">

                    <form id="uploadFileData" action="/Admin/Dashboard/EditFormPartial" enctype="multipart/form-data">
                        <div class="col-md-5">
                            <a href="#" download id="uploadLink">Choose Files</a>
                            <input asp-for="@Model.FileNames" type="file" id="fileInput" multiple style="display:none;" />
                            @*<input asp-for="@Model.FileNames" asp-for="files" class="form-control custom-file-input" id="fileInput" multiple />*@
                            <br /><br />
                        </div>
                        <div class="col-md-7">
                            <input type="button" id="btnupload" value="Upload" style="float:left" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </form>
</div>


