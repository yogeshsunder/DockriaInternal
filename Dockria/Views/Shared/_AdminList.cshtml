@model IEnumerable<Domain.Model.ApplicationUser>
@using Microsoft.AspNetCore.Identity;

@if (Model == null)
{
    <div class="alert alert-danger">
        Error: Model is null.
    </div>
}
else if (!Model.Any())
{
    <div class="alert alert-info">
        No admins found.
    </div>
}
else
{
    

    <div style="margin-left:2%">
        <table class="table table-bordered table-head-bg-info table-bordered-bd-info" style="border: 4px solid #2274A5;">
            <thead>
                <tr class="table table-bordered table-bordered-bd-warning mt-4">
                    <th colspan="3" style="text-align :center;"  >LIST OF ALL ADMINS</th>
                </tr>
                <tr>
                    
                    <th scope="row" class="text-center">ADMIN NAME</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td class="text-center">@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td class="text-center">
                            <div class="row">
                                <div class="col">
                                    <input type="submit" value="Edit" class="btn btn-success btn-sm d-inline btn-block edit-user" data-id="@item.Id" />
                                </div>
                                <div class="col">
                                    <input type="submit" value="Delete" id="deleteButton" onclick="deleteBtn('@item.Id')" class="btn btn-danger btn-sm d-inline btn-block" data-id="@item.Id" />
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
